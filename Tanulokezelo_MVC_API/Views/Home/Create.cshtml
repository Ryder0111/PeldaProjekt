@model Tanulokezelo_MVC_API.Models.StudentDTO

@if (ViewData["Hibakód"] != null)
{
    <h1 style="color:red">Ilyen OM azonosító már létezik!</h1>
}

<h2>Tanuló adatainak megadása</h2>
<form method="post" class="mt-3">
    <div>
        <label>Tanuló neve: </label>
        <input class="form-control" type="text" asp-for="Name" />
    </div>
    <div>
        <label>Kora: </label>
        <input class="form-control" type="number" asp-for="Age" />
    </div>
    <div>
        <label>OM azonosítója: </label>
        <input class="form-control" type="number" max="999999" placeholder="123456" asp-for="OMidentifier" />
    </div>
    <div>
        <label>Átlaga: </label>
        <input class="form-control" type="number" step="0.01" asp-for="GPA" /><br />
    </div>
    <button type="submit" class="btn-info">Tanuló felvétele</button>
</form>