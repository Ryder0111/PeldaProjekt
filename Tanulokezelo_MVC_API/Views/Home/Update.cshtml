@model Tanulokezelo_MVC_API.Models.StudentDTO;

<h1>@Model.Name módosítása</h1>
<form method="post" class="mt-3">
    <div class="form-group">
        <label>Név: </label> <input asp-for="Name" value="@Model.Name" class="form-control" /><br />
    </div>
    <div class="form-group">
        <label>OM azonosító: </label><input asp-for="OMidentifier" max="999999" value="@Model.OMidentifier" class="form-control" readonly/><br />
    </div>
    <div class="form-group">
        <label>@Model.Name kora: </label><input asp-for="Age"value="@Model.Age" class="form-control" /><br />
    </div>
    <div class="form-group">
        <label>Átlaga: </label><input asp-for="GPA" value="@Model.GPA" class="form-control" /><br />
    </div>
    <button type="submit" class="btn btn-success mt-3">Adatok módosítása</button>
</form>
